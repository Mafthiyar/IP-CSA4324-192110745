phpcode for data insertion----

<?php

$servername = "localhost";
$username = "root";
$password = "";
$dbanme = "bookings";
$conn = new mysqli($servername,$username,$password,$dbanme);

if($conn->connect_error){
    die("Connection Failed:" .$conn->connect_error);

}
//Handle form submission
if($_SERVER["REQUEST_METHOD"] == "POST"){
    $name = $_POST["name"];
    $email = $_POST["email"];
    $destination = $_POST["destination"];
    $departure_date = $_POST["departure-date"];
    $return_date = $_POST["return-date"];

    //prepare and execute the database insertion
    $sql = "INSERT INTO `booking`(`name`, `email`, `destination`, `departure_date`, `return_date`)
     VALUES ('$name','$email','$destination','$departure_date','$return_date')";

     if($conn->query($sql) == TRUE){
        echo "Booking Successfully";
     }else{
        echo "Error: " .$sql . "<br>" .$conn->error; 
     }
}
$conn->close();
?>

php code for data base fetching----

<?php

$servername = "localhost";
$username = "root";
$password = "";
$dbname = "bookings";
$conn = new mysqli($servername, $username, $password, $dbname);

if ($conn->connect_error) {
    die("Connection Failed: " . $conn->connect_error);
}

// Fetch data from the bookings table
$sql = "SELECT * FROM booking";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    // Output data of each row
    echo "<table border='1'>
            <tr>
                
                <th>Name</th>
                <th>Email</th>
                <th>Destination</th>
                <th>Departure Date</th>
                <th>Return Date</th>
            </tr>";
    while ($row = $result->fetch_assoc()) {
        echo "<tr>
              
                <td>" . $row["name"] . "</td>
                <td>" . $row["email"] . "</td>
                <td>" . $row["destination"] . "</td>
                <td>" . $row["departure_date"] . "</td>
                <td>" . $row["return_date"] . "</td>
              </tr>";
    }
    echo "</table>";
} else {
    echo "No bookings found";
}

$conn->close();
?>
